{
    "version": "6.0.0149_0143",
    "url": "https://downloads.sourceforge.net/project/zapps/Xshell-Plus.7z",
    "hash": "B8861DB9050492105722FCD64498D7E05B3E2ED485AFAF9C8FF46C750DD9EB32",
    "shortcuts": [
        [
            "Xftp.exe",
            "Xftp"
        ],
        [
            "Xshell.exe",
            "Xshell"
        ]
    ],
    "post_install": [
        "if (Test-Path \"$dir\\xshell-plus-install.reg\") {",
        "  $apppath = \"$dir\\\".Replace('\\', '\\\\')",
        "  $content = Get-Content \"$dir\\xshell-plus-install.reg\"",
        "  $content = $content.Replace('$path', $apppath)",
        "  if ($global) {",
        "    $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "  }",
        "  $content | Set-Content -Path \"$dir\\xshell-plus-install.reg\"",
        "}",
        "if (Test-Path \"$dir\\xshell-plus-uninstall.reg\") {",
        "  $content = Get-Content \"$dir\\xshell-plus-uninstall.reg\"",
        "  if ($global) {",
        "    $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "  }",
        "  $content | Set-Content -Path \"$dir\\xshell-plus-uninstall.reg\"",
        "}",
        "regedit /s $dir\\xshell-plus-install.reg"
    ],
    "uninstaller": {
        "script": [
            "regedit /s $dir\\xshell-plus-uninstall.reg"
        ]
    }
}
