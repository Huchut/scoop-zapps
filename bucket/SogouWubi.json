{
    "version": "3.1.0.1751",
    "homepage": "https://wubi.sogou.com/",
    "url": "http://cdn2.ime.sogou.com/dl/index/1510799567/sogou_wubi_31a.exe#/dl.exe",
    "installer": {
        "file": "dl.exe",
        "args": [
            "/S",
            "/D=$dir"
        ]
    },
    "uninstaller": {
        "file": "3.1.0.1751\\uninstall.exe",
        "args": [
            "/S"
        ],
        "script": [
            "Start-Sleep -Seconds 5",
            "Get-WmiObject Win32_Process -Filter \"name='SogouWBImeLoader.exe'\" | Invoke-WmiMethod -Name Terminate | Out-Null",
            "sudo Remove-Item C:\\Windows\\SysWOW64\\IME\\SogouWB -Recurse",
            "sudo Remove-Item -Path HKLM:\\SOFTWARE\\WOW6432Node\\SogouWBInput -Recurse",
            "sudo Remove-Item $env:SystemRoot\\System32\\SogouWB.ime",
            "sudo Remove-Item $env:SystemRoot\\System32\\SogouWBTSF.ime",
            "sudo Remove-Item $env:SystemRoot\\SysWOW64\\SogouWB.ime",
            "sudo Remove-Item $env:SystemRoot\\SysWOW64\\SogouWBTSF.ime"
        ]
    }
}