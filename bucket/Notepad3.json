    "architecture": {
        "64bit": {
            "installer": {
                "script": [
                    "Expand-ZipArchive \"$dir\\Notepad3_${version}_x64.zip\"",
                    "sudo New-Item 'HKLM:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Image File Execution Options\\notepad.exe'",
                    "sudo New-ItemProperty 'HKLM:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Image File Execution Options\\notepad.exe' -Name Debugger -PropertyType String -Value '\"$dir\\Notepad3.exe\" /z'"

                ]
            },
            "uninstall": {
                "script": [
                    "sudo Remove-Item 'HKLM:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Image File Execution Options\\notepad.exe'"
                ]
            }
        },
        "32bit": {
            "installer": {
                "script": "Expand-ZipArchive \"$dir\\Notepad3_${version}_x86.zip\""
            },
            "uninstall": {
                "script": [
                    "sudo Remove-Item 'HKLM:\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Image File Execution Options\\notepad.exe'"
                ]
            }
        }
    },
    "post_install": [
        "Remove-Item \"$dir\\Notepad3_${version}_x*.zip\"",
        "if (Test-Path(\"$dir\\replace-windows-notepad.reg\")) {",
        "    $notepad3 = \"$dir\\Notepad3.exe\" -Replace '\\\\', '\\\\'",
        "    $content = Get-Content \"$dir\\replace-windows-notepad.reg\"",
        "    $content = $content -Replace '\\$notepad3', $notepad3",
        "    Set-Content \"$dir\\replace-windows-notepad.reg\" $content -Encoding ASCII",
        "}"
    ],
    "checkver": {
        "github": "https://github.com/rizonesoft/Notepad3",
        "regex": "/releases/tag/RELEASE_([\\d.]+)"
