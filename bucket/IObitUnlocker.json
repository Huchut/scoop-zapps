{
    "homepage": "https://www.iobit.com/en/iobit-unlocker.php",
    "version": "1.1.2",
    "url": "http://update.iobit.com/dl/unlocker-setup.exe#/setup.exe",
    "installer": {
        "script": [
            "Start-Process \"$dir\\setup.exe\" \"/VERYSILENT /DIR=$dir /NORESTART\" -PassThru -NoNewWindow | Wait-Process"
        ]
    },
    "post_install": "Remove-Item \"$env:PUBLIC\\Desktop\\IObit` Unlocker.lnk\"",
    "uninstaller": {
        "script": [
            "Invoke-ExternalCommand \"$dir\\unins000.exe\" -ArgumentList @('/VERYSILENT','/NORESTART') -RunAs | Out-Null"
        ]
    }
}
